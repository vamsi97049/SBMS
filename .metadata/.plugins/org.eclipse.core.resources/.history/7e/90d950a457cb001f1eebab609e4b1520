package i.vk.exp;

import java.time.LocalDateTime;

import org.springframework.web.bind.annotation.ExceptionHandler;
import org.springframework.web.bind.annotation.RestControllerAdvice;

import i.vk.inders.ExpPacket;

@RestControllerAdvice
public class ExpHandler {
	@ExceptionHandler(value = Exception.class)
	public ExpPacket handleUnknownException(Exception e) {
		return new ExpPacket("Exp:840001","NullPointerException",LocalDateTime.now());
	}
	@ExceptionHandler(value = CourseNotFoundException.class)
	public ExpPacket userDefinedException(CourseNotFoundException e) {
		return (new CourseNotFoundException).courseNotFound();
	}
}
