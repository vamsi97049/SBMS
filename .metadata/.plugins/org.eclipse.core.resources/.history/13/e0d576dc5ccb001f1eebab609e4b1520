package i.vk.exp;

import java.time.LocalDateTime;

import org.springframework.stereotype.Service;
import org.springframework.web.bind.annotation.ExceptionHandler;
import org.springframework.web.bind.annotation.RestControllerAdvice;

import i.vk.inders.ExpPacket;

@Service
@RestControllerAdvice
public class ExpHandler {
	@ExceptionHandler(value = Exception.class)
	public ExpPacket handleUnknownException(Exception e) {
		return new ExpPacket("ApplicatinException:60001",e.getMessage(),LocalDateTime.now());
	}
	@ExceptionHandler(value = Exception.class)
	public ExpPacket CourseNotFoundException(CourseNotFoundException e) {
		return new ExpPacket("DevException:90001",e.getMessage(),LocalDateTime.now());
	}
	
}
