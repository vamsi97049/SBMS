package i.vk.exp;

import java.time.LocalDateTime;

import org.springframework.web.bind.annotation.ExceptionHandler;
import org.springframework.web.bind.annotation.RestControllerAdvice;

import i.vk.inders.ExpPacket;

@RestControllerAdvice
public class ExpHandler {
	@ExceptionHandler(value = {NullPointerException.class})
	public ExpPacket handleUnknownException(Exception e) {
		
		ExpPacket exp = new ExpPacket();
		exp.setExpCode("ERK_NPE:99991");
		exp.setExpMsg(e.getLocalizedMessage());
		exp.setOccuredOn(LocalDateTime.now());
		return exp;
	}
}
