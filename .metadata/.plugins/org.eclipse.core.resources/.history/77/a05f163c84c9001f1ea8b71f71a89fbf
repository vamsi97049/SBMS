<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <title>Thymeleaf Button Example</title>
    <style>
        /* Center the buttons and give space between them */
        .button-container {
            text-align: center;
            margin-top: 20px;
        }
        .button-container button {
            margin: 0 15px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }
        /* Style the table */
        table {
            width: 60%;
            margin: 20px auto;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="button-container">
        <!-- Button 1 -->
        <a href="#" id="button1" class="button" th:href="@{/getRandom}" onclick="toggleResponse('response1', 'response2')">First Button</a>
        
        <!-- Button 2 -->
        <a href="#" id="button2" class="button" th:href="@{/getAll}" onclick="toggleResponse('response2', 'response1')">Second Button</a>
    </div>

    <!-- Response from Button 1 -->
    <div id="response1" style="display:none; text-align:center;">
        <p>ID: <span th:text="${id}">ID Placeholder</span></p>
        <p>QUOTE: <span th:text="${quote}">Quote Placeholder</span></p>
        <p>AUTHOR: <span th:text="${author}">Author Placeholder</span></p>
    </div>

    <!-- Response from Button 2 -->
    <div id="response2" style="display:none;">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>QUOTE</th>
                    <th>AUTHOR</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td th:text="${id}">ID Placeholder</td>
                    <td th:text="${quote}">Quote Placeholder</td>
                    <td th:text="${author}">Author Placeholder</td>
                </tr>
            </tbody>
        </table>
    </div>

    <script>
        function toggleResponse(showId, hideId) {
            document.getElementById(showId).style.display = 'block';
            document.getElementById(hideId).style.display = 'none';
        }
    </script>
</body>
</html>
