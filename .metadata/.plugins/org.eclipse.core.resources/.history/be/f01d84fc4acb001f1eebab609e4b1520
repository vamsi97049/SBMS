package i.vk.restcontroller;

import java.time.LocalDate;

import org.springframework.web.bind.annotation.ExceptionHandler;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import i.vk.inders.ExpPacket;

@RestController
public class GreetUser {
	@GetMapping("/greetuser")
	public String greetUser() {
		int res = 19/0;
		return "Welcome to VK-Virtual Services ( Andhra Pradesh )"+res;
	}
	
	@ExceptionHandler(value = Exception.class)
	public String exceptionHandler() {
		ExpPacket expPacket = new ExpPacket();
		expPacket.setExpCode("ZDE:18755");
		expPacket.setExpMsg("DivisionError: Can't devide with zero");
		LocalDate currentDate  = new LocalDate();
		expPacket.setExpDate(currentDate);
	}
}
