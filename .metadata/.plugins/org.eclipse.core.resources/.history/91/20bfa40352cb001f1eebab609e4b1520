package i.vk.restcontroller;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class GreetUser {
	@GetMapping("/greetuser")
	public String greetUser() {
		int res = 19/0;
		return "Welcome to VK-Virtual Services ( Andhra Pradesh )"+res;
	}
	public String home() {
		String body = "<html>"
				+ "<head>"
				+ "<title>Home Page ( VK services )</title>"
				+ "</head>"
				+ "<body>"
				+ "<h1 style='color:green;'>Main Home Page Content goes here......</>"
				+ "</body>"
		        + "</html>";
		return body;
	}
}
